<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="seguridad" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MySQLDialect" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.sql-load-script-source"
				value="META-INF/data.sql" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://18.191.183.240:3306/blog"/>
			<property name="javax.persistence.jdbc.user" value="maria"/>
			<property name="javax.persistence.jdbc.password" value="maria"/>
		</properties>


	</persistence-unit>

</persistence>

